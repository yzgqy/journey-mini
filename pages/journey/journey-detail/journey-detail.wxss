.container-detail {
  display: flex;
  flex-direction: column;
}

.topic-date {
  flex-direction: row;
  width: 100%;
  height: 150rpx;
}

.author-data {
  margin-left: 40rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 30rpx;
  color: #999;
  margin-left: 100rpx;
  vertical-align: middle;
}

.title {
  margin-left: 40rpx;
  font-size: 50rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.journey-detail {
  width: 100%;
  flex-direction: column;
  margin-left: 40rpx;
  font-size: 35rpx;
  color: #666;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  height: 600rpx;
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.hr {
  width: 100%;
  height: 3rpx;
  background-color: #837f7f;
  margin-top: 10rpx;
  position: relative;
}

.button{
  display: flex;
  flex-direction:column;
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  /* margin-left:40rpx;
  margin-right: 40rpx; */
  align-items: center;
}

